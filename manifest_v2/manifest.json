{
   "author": "JohnyP e.a.",
   "name": "YT Nonstop",
   "description": "No more 'Video paused. Continue watching?' confirmation box! And with two extra options: 1) disable autoplay; 2) loop playlist.",
   "homepage_url": "https://github.com/JohnyP36/YT-Nonstop",
   "icons": {
      "128": "images/ext128.png",
      "16": "images/ext16.png",
      "32": "images/ext32.png",
      "48": "images/ext48.png"
   },
   "page_action": {
      "default_icon": {
         "128": "images/ext128.png",
         "16": "images/ext16.png",
         "32": "images/ext32.png",
         "48": "images/ext48.png"
      },
      "default_popup": "popup1.3.2.html",
      "show_matches": [ "*://www.youtube.com/*", "*://m.youtube.com/*", "*://music.youtube.com/*" ]
   },
   "options_ui": {
      "browser_style": false,
      "page": "popup1.3.2.html"
   },
  "browser_specific_settings": {
    "gecko": {
      "id": "idJohnyP@example.net",
      "strict_min_version": "79.0"
    }
  },
   "manifest_version": 2,
   "background": {
      "persistent": false,
      "scripts": [ "js/background.js" ]
   },
   "content_scripts": [ {
      "js": [ "js/autoconfirm.js", "js/autoplay+loop.js" ],
      "matches": [ "*://www.youtube.com/*", "*://music.youtube.com/*", "*://m.youtube.com/*" ],
      "run_at": "document_end"
   } ],
   "web_accessible_resources": [
     "fonts/Copperplate.woff2",
     "fonts/Estrangelo.woff2",
     "fonts/Lucida.woff2"
   ],
   "permissions": [ "storage", "tabs", "*://www.youtube.com/*", "*://m.youtube.com/*", "*://music.youtube.com/*" ],
   "version": "2.0.8.2"
}
